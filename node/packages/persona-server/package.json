{
  "name": "@agilehead/persona-server",
  "version": "0.0.1",
  "description": "OAuth authentication and identity management service",
  "type": "module",
  "main": "dist/bin/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/bin/server.ts",
    "start": "node dist/bin/server.js",
    "test": "NODE_OPTIONS='--import tsx' mocha tests/index.ts --timeout 60000",
    "test:grep": "NODE_OPTIONS='--import tsx' mocha tests/index.ts --timeout 60000 --grep",
    "test:build": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@agilehead/persona-db": "file:../persona-db",
    "@agilehead/persona-logger": "file:../persona-logger",
    "@tinqerjs/better-sqlite3-adapter": "0.0.26",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "openid-client": "^6.2.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@agilehead/persona-test-utils": "file:../persona-test-utils",
    "@types/chai": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mocha": "^10.0.10",
    "@types/supertest": "^6.0.3",
    "chai": "^5.1.2",
    "mocha": "^10.8.2",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.2"
  }
}
