# Persona Environment Configuration
# Copy to .env and update with your values
#
# IMPORTANT: All required variables must be set. No defaults are used.

# =============================================================================
# Tenant Configuration (REQUIRED)
# =============================================================================
# Mode: "single" (one implicit tenant) or "multi" (explicit tenant required)
PERSONA_TENANT_MODE=single
# Comma-separated list of allowed tenants
# For single mode: exactly 1 tenant (requests must NOT include tenant param)
# For multi mode: 1 or more tenants (requests MUST include tenant param)
PERSONA_TENANTS=myapp

# =============================================================================
# Server Configuration (REQUIRED)
# =============================================================================
PERSONA_SERVER_HOST=127.0.0.1
PERSONA_SERVER_PORT=5005
PERSONA_SERVER_PUBLIC_URL=http://localhost:5005

# =============================================================================
# Database Configuration (REQUIRED)
# =============================================================================
# Directory for SQLite database (persona.db will be created here)
PERSONA_DATA_DIR=./data

# =============================================================================
# JWT & Session Configuration (REQUIRED)
# =============================================================================
PERSONA_JWT_SECRET=your-jwt-secret-here
PERSONA_SESSION_SECRET=your-session-secret-here

# Token expiry times (optional, defaults shown)
# PERSONA_ACCESS_TOKEN_EXPIRY=15m
# PERSONA_REFRESH_TOKEN_EXPIRY=7d

# Cookie domain for cross-subdomain auth (optional)
# PERSONA_COOKIE_DOMAIN=.example.com

# =============================================================================
# Internal API (REQUIRED)
# =============================================================================
# Secret for service-to-service calls (e.g., from your main app)
PERSONA_INTERNAL_SECRET=your-internal-secret-here

# =============================================================================
# Google OAuth (optional - leave empty to disable)
# =============================================================================
PERSONA_GOOGLE_CLIENT_ID=
PERSONA_GOOGLE_CLIENT_SECRET=
PERSONA_GOOGLE_REDIRECT_URI=http://localhost:5005/auth/google/callback

# =============================================================================
# CORS Configuration (optional)
# =============================================================================
# Comma-separated list of allowed origins
PERSONA_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Logging (optional)
# =============================================================================
LOG_LEVEL=info
# PERSONA_LOG_FILE_DIR=./data/logs
