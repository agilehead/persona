# Persona Docker Environment Configuration
# Copy to .env.docker and update with your values

# =============================================================================
# Tenant Configuration (REQUIRED)
# =============================================================================
PERSONA_TENANT_MODE=single
PERSONA_TENANTS=myapp

# =============================================================================
# Server Configuration (REQUIRED)
# =============================================================================
PERSONA_SERVER_HOST=0.0.0.0
PERSONA_SERVER_PORT=5005
PERSONA_SERVER_PUBLIC_URL=http://localhost:5005

# =============================================================================
# Database Configuration (REQUIRED)
# =============================================================================
PERSONA_DATA_DIR=/app/data

# =============================================================================
# JWT & Session Configuration (REQUIRED)
# =============================================================================
PERSONA_JWT_SECRET=
PERSONA_SESSION_SECRET=

# Cookie domain for cross-subdomain auth (production)
# PERSONA_COOKIE_DOMAIN=.example.com

# =============================================================================
# Internal API (REQUIRED)
# =============================================================================
PERSONA_INTERNAL_SECRET=

# =============================================================================
# Google OAuth (optional)
# =============================================================================
PERSONA_GOOGLE_CLIENT_ID=
PERSONA_GOOGLE_CLIENT_SECRET=
PERSONA_GOOGLE_REDIRECT_URI=http://localhost:5005/auth/google/callback

# =============================================================================
# CORS Configuration (REQUIRED)
# =============================================================================
PERSONA_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
PERSONA_LOG_FILE_DIR=/app/data/logs
